{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "./",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "types": ["node"],
        "allowJs": true,
        "checkJs": true
    },
    "exclude": ["**/*.js"],
    "lib": ["ES2020"]
}
