{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Engine",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/engine",
            "cwd": "${workspaceFolder}/out",
            "args": [
                "Run",
                "-i=${file}",
                "-v=2",
                "-o=${fileBasenameNoExtension}",
                "--profiling=${fileBasenameNoExtension}/engine.prof"
            ],
            "env": {
                "KLOTHO_DEBUG_DIR": "${workspaceFolder}/out/${fileBasenameNoExtension}",
                "COLUMNS": "120"
            }
        },
        {
            "name": "IaC",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/iac",
            "cwd": "${workspaceFolder}/out",
            "args": [
                "Generate",
                "-i=${file}",
                "-v",
                "-o=${fileBasenameNoExtension}/iac",
                "--profiling=${fileBasenameNoExtension}/iac.prof"
            ]
        },
        {
            "name": "KB",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/kb",
            "cwd": "${workspaceFolder}",
            "args": [
                "-v",
                "-c",
                "network",
                "aws:subnet",
                "aws:route_table",
            ],
            "env": {
                "BROWSER": "none",
                "INFRACOPILOT_URL": "http://localhost:3000",
                "AUTH_DOMAIN": "klotho-dev.us.auth0.com",
                "AUTH_CLIENT_ID": "A0sIE3wvh8LpG8mtJEjWPnBqZgBs5cNM"
            }
        },
        {
            "name": "Debug: Klotho",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/klotho",
            // CWD is mostly responsible for the pipenv environment. There's one at the root that can be used generally.
            // If a specific env is needed, uncomment the following line.
            // "cwd": "${fileDirname}",
            "args": [
                "up",
                "-v=3",
                "--state-directory=${workspaceFolder}/out",
                "--profiling=${workspaceFolder}/out/klotho.prof",
                "-n=1",
                "--debug=vscode",
                "${file}"
                // "infra.py"
            ],
            "env": {
                "KLOTHO_DEBUG_DIR": "${workspaceFolder}/out",
                "AWS_REGION": "${env:AWS_REGION}",
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Listen",
            "type": "debugpy",
            "request": "attach",
            "listen": {
                "host": "localhost",
                "port": 5678,
            },
        },
        {
            "name": "Klotho: deploy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/klotho",
            "cwd": "${fileDirname}",
            "args": [
                "up",
                "-v=3",
                "--state-directory=${workspaceFolder}/out",
                "--profiling=${workspaceFolder}/out/deploy.prof",
                "${file}"
            ],
            "env": {
                "KLOTHO_DEBUG_DIR": "${workspaceFolder}/out",
                "AWS_REGION": "${env:AWS_REGION}",
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Klotho: destroy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/klotho",
            "cwd": "${fileDirname}",
            "args": [
                "down",
                "-v=3",
                "--state-directory=${workspaceFolder}/out",
                "--profiling=${workspaceFolder}/out/destroy.prof",
                "${file}"
            ],
            "env": {
                "KLOTHO_DEBUG_DIR": "${workspaceFolder}/out",
                "AWS_REGION": "${env:AWS_REGION}",
            },
            "console": "integratedTerminal"
        },
    ],
    "compounds": [
        {
            "name": "Debug: Llotho + infra.py",
            "configurations": [
                "Debug: Klotho",
                "Python Debugger: Listen"
            ],
            "stopAll": true,
        }
    ]
}