{
  "[go]": {
    "editor.rulers": [
      120
    ]
  },
  "files.associations": {
    "*.tmpl": "gotmpl"
  },
  "[gotmpl]": {
    "files.insertFinalNewline": false
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "go.testTimeout": "5m",
  "go.lintTool": "golangci-lint"
}
